
<h1>Cars</h1>

<table id='my_cars' class="table table-striped">
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= car.price %></td>
      <td><%= link_to('Edit', edit_car_path(car)) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Car', new_car_path %>
