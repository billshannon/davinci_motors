
<h1>Cars</h1>
<%= will_paginate @cars, renderer: BootstrapPagination::Rails %>
<table id='my_cars' class="table table-striped">
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= number_to_currency(car.price, precision: 0) %></td>
      <td><%= link_to('Edit', edit_car_path(car)) %></td>
      <!--<td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
    </tr>
  <% end %>
</table>
<%= will_paginate @cars, renderer: BootstrapPagination::Rails %>
<%= link_to 'New Car', new_car_path %>
